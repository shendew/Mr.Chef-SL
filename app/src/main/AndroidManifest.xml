<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kingdew.mrchefsl">

    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_2_round"
        android:supportsRtl="true"
        android:theme="@style/White"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".CategoryScreen"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8464186986201471~2801729758" />

        <activity
            android:name=".PostScreen"
            android:exported="false"
            android:theme="@style/Theme.MrChefSL"/>
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/White">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".HomeScreen"
            android:exported="false"
            />
    </application>

</manifest>